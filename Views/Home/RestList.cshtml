@{
    ViewData["Title"] = "User-Recommended Restaurants";
}

@model IEnumerable<BarkerAssignment4.Models.UserRecommendation>

<div>
    <h1 class="text-center">@ViewData["Title"]</h1>

    <p class="text-center">Users think these are the must-try restaurants of Provo. Check them out for yourself!</p>
</div>
<div class="list-group text-center">
    <table>
        <thead class="text-center list-group-item text-dark">
            <tr>Recommender</tr><tr>Restaurant</tr><tr>Favorite Dish</tr><tr>Phone Number</tr>
        </thead>
        <tbody>
            @foreach (BarkerAssignment4.Models.UserRecommendation x in Model)
            {
                <tr class="list-group-item">
                    <td>@x.Name</td>
                    <td>@x.RestaurantName</td>
                    <td>@x.FavoriteDish</td>
                    <td>@x.RestaurantPhone</td>
                </tr>
            }
        </tbody>

    </table>
</div>

